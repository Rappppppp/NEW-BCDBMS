<!doctype html>
<html lang="en">

<head>
    <%- include('../User/parts/headlib') %>
        <style>
            html,
            body {
                margin: 0;
                height: 100%;
                overflow: hidden
            }

            .card {
                background-color: #263a90;
                color: white;
                box-shadow: 0px 0px 13px 11px rgb(0 0 0 / 31%);
            }

            .header-title {
                text-align: -webkit-center;
            }

            .txt-center {
                margin-top: 3rem;
                color: white;
                font-family: revert;
                background-color: #263a90;
                padding: 1rem;
                width: 30%;
                border-radius: 10px;
                text-align: center;
                font-size: x-large;
                font-weight: bold;
            }

            .form-control:focus {
                color: #000000;
                background-color: #fff;
                border-color: #ffbd00;
                outline: 0;
                box-shadow: 0 0 0 0.1rem rgb(252 196 34);
            }

            .pb-lg-2,
            .text-muted {
                color: white !important;
            }

            .img-fluid {
                max-width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .btn-dark {
                color: #212529;
                font-weight: 500;
                background-color: #fcc422;
                border-color: #212529;
            }

            .btn-dark:hover {
                color: #212529;
                background-color: #d3a51b;
            }
        </style>
        <title>
            <%= title %>
        </title>
</head>

<body style="background-image: url('images/Vector.png'); background-repeat: round;">
    <div class="wrapper">
        <div class="header-title">
            <div class="txt-center">ADMIN LOGIN</div>
        </div>
        <section class="vh-100 mb-4">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="images/Barangay_Cembo_Fuji.jpg" alt="login form" class="img-fluid"
                                        style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                    <div class="card-body p-4 p-lg-5">
                                        <form id="login_info">
                                            <div class="form-outline mb-4">
                                                <input type="name" id="username" class="form-control form-control-lg" />
                                                <label class="form-label" for="username">Username</label>
                                            </div>
                                            <div class="form-outline mb-4">
                                                <input type="password" id="password"
                                                    class="form-control form-control-lg" />
                                                <label class="form-label" for="password">Password</label>
                                            </div>
                                            <div class="pt-1 mb-4">
                                                <button class="btn btn-dark btn-lg btn-block"
                                                    type="submit">Login</button>
                                            </div>
                                        </form>
                                        <div id="message"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>

</html>
<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="javascripts/adminlogin.js"></script>
<script>login()</script>