<!DOCTYPE html>
<html>

<head>
  <%- include('./User/parts/headlib') %>
    <title>
      <%= title %>
    </title>
    <style>
      html,
      body {
        margin: 0;
        height: 100%;
        overflow: hidden
      }

      .card {
        background-color: #263a90;
        color: white;
        box-shadow: 0px 0px 13px 11px rgb(0 0 0 / 31%);
      }

      .form-control:focus {
        color: #000000;
        background-color: #fff;
        border-color: #ffbd00;
        outline: 0;
        box-shadow: 0 0 0 0.1rem rgb(252 196 34);
      }

      .pb-lg-2,
      .text-muted {
        color: white !important;
      }

      section.vh-100 {
        margin-top: 8%;
      }

      .img-fluid {
        max-width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .btn-dark {
        color: #212529;
        font-weight: 500;
        background-color: #fcc422;
        border-color: #212529;
      }

      .a-register:hover {
        color: #d3a51b;
        text-decoration-line: none;
      }

      .a-register {
        color: #fcc422;
        text-decoration: none;
        transition-delay: 0.3s;
      }
    </style>
    <link rel="stylesheet" href="stylesheets/footer.css">
</head>

<body style="background-image: url('images/Vector.png'); background-repeat: round;">
  <section class="vh-100 mb-4">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="images/Barangay_Cembo_Fuji.jpg" alt="login form" class="img-fluid"
                  style="border-radius: 1rem 0 0 1rem;" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">

                  <form action="/login" method="POST" autocomplete="off">
                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                    <div class="form-outline mb-4">
                      <input type="text" id="name" name="name" class="form-control form-control-lg" />
                      <label class="form-label" for="name">Barangay ID</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="password" id="password" name="password" class="form-control form-control-lg" />
                      <label class="form-label" for="password">Password</label>
                    </div>

                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                    </div>
                    <% if (messages.error) { %>
                      <div class="text-danger">
                        <%= messages.error %>
                      </div>
                      <% } %>
                        <br>
                        <!-- <a class="small text-muted" href="#!">Forgot password?</a> -->
                        <p class="mb-5 pb-lg-2">Don't have an account? <a class="a-register" href="/register">Register
                            here</a></p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>