<!-- <!doctype html> -->
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Registration Form</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%- include('./User/parts/headlib') %>
        <link rel="stylesheet" href="stylesheets/registration.css">
        <link rel="stylesheet" href="stylesheets/footer.css">
        <!--* DATE -->
        <!-- <link rel="stylesheet" href="http://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
        <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script> -->
        <style>
            html,
            body {
                margin: 0;
                height: 100%;
                overflow: hidden
            }

            .back_button {
                position: absolute;
                left: 0;
                top: 3rem;
                border-top-left-radius: 0;
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
                border-bottom-left-radius: 0;
            }
        </style>
</head>

<body>
    <main>
        <div id="content">

            <!--style="background-image: url('images/Vector.png');"-->
            <div class="container-fluid" id="main">
                <div class="container-fluid" id="header-container">
                    <p class="pt-3">REGISTRATION FORM</p>
                </div>

                <a href="/login"><button class="btn btn-warning text-black back_button">Back</button></a>

                <div id="message"></div>
                <div class="btn-group" id="btn-group">
                    <button onclick="toggle()" type="button" class="btn active" id="1">User Profile</button>
                    <button onclick="toggle()" type="button" class="btn" id="2">Address</button>
                    <button onclick="toggle()" type="button" class="btn" id="3">Makati Info</button>
                </div>
                <div class="container-fluid" id="button-spacer"></div>
                <form method="post" id="register_form" autocomplete="off">
                    <div class="container-fluid" id="content-container">
                        <div class="container-fluid" id="userProfile">
                            <div class="row border">
                                <div class="col-lg-2 col-md-4 border">
                                    <img src="images/blank_profile_pic.webp" id="profilePic">
                                </div>
                                <div class="col-lg-6 col-md-4 border">
                                    <div class="row">
                                        <label for="inputFirstName">First Name</label>
                                        <input type="text" name="first_name" id="first_name" class="form-control cap">
                                    </div>
                                    <div class="row">
                                        <label for="inputLastName">Last Name</label>
                                        <input type="text" name="last_name" id="last_name" class="form-control cap">
                                    </div>
                                    <div class="row">
                                        <label for="inputMiddleName">Middle Name</label>
                                        <input type="text" name="middle_name" id="middle_name" class="form-control cap">
                                    </div>
                                    <div class="row">
                                        <div class="col p-0">
                                            <label for="inputEmailAddress">Email Address</label>
                                            <input type="email" name="email_address" id="email_address"
                                                class="form-control">
                                        </div>
                                        <div class="col pr-0">
                                            <label for="inputContactNumber">Contact Number</label>
                                            <input type="number" name="contact_number" id="contact_number"
                                                class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-2 border">
                                    <div class="row">
                                        <label for="inputDateofBirth">Date of Birth</label>
                                        <input type="text" id="datepicker" class="form-control" name="dob"
                                            placeholder="YYYY-MM-DD" autocomplete="off" readonly>
                                    </div>
                                    <div class="row">
                                        <label for="inputReligion">Religion</label>
                                        <select name="religion" id="religion" class="form-control">
                                            <option value="Roman Catholic">Roman Catholic</option>
                                            <option value="Iglesia ni Cristo">Iglesia ni Cristo</option>
                                            <option value="Muslim">Muslim</option>
                                            <option value="Born Again">Born Again</option>
                                            <option value="Seventh Day Adventist">Seventh Day Adventist
                                            </option>
                                            <option value="Saksi ni Jehovah">Saksi ni Jehovah</option>
                                            <option value="Mormons">Mormons</option>
                                            <option value="Buddhist">Buddhist</option>
                                            <option value="Others">Others</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password">
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-2 border">
                                    <div class="row">
                                        <label for="inputPlaceofBirth">Place of Birth</label>
                                        <input type="text" name="pob" id="pob" class="form-control cap">
                                    </div>
                                    <div class="row">
                                        <label for="inputCivilStatus">Civil Status</label>
                                        <select type="text" name="civil_status" id="civil_status" class="form-control">
                                            <option value="Single">Single</option>
                                            <option value="Married">Married</option>
                                            <option value="Widowed">Widowed</option>
                                            <option value="Live-in">Live-in</option>
                                            <option value="Separated">Separated</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <label for="inputGender">Gender</label>
                                        <select name="gender" id="gender" class="form-control">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Gay">Gay</option>
                                            <option value="Lesbian">Lesbian</option>
                                            <option value="Others">Others</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container-fluid" id="address">
                            <label for="inputPhysicalAddress">Physical Address</label>
                            <input type="text" name="physical_address" id="physical_address" class="form-control cap">
                            <label for="inputProvince">Province</label>
                            <input type="text" name="province" id="province" class="form-control cap">
                            <label for="inputProvinacialAddress">Provincial Address</label>
                            <input type="text" name="provincial_address" id="provincial_address"
                                class="form-control cap">
                        </div>
                        <div class="container-fluid" id="makatiInfo">
                            <div class="row">
                                <div class="col-lg-3 border">
                                    <div class="row">
                                        <div class="col">
                                            <label for="isVoter" id="labelRegisteredvoter">Registered Voter
                                                of Makati</label>
                                        </div>
                                        <div class="col">
                                            <input name="isVoter" type="checkbox" class="form-control bool"
                                                id="isVoter">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="isHead" id="labelHeadofHousehold">Head of
                                                Household?</label>
                                        </div>
                                        <div class="col">
                                            <input name="isHead" type="checkbox" class="form-control" id="isHead">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputSocialSelector" id="socialselector">Social
                                                Selector</label>
                                            <select type="inputSocialSelector" id="inputSocialSelector"
                                                name="social_sector" class="form-control">
                                                <option value="NA">NA</option>
                                                <option value="Education">Education</option>
                                                <option value="Health">Health</option>
                                                <option value="Social Welfare">Social Welfare</option>
                                                <option value="Sports">Sports</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputVaccine" id="vaccine">Vaccine</label>
                                            <select name="vaccine" class="form-control" id="inputVaccine">
                                                <option value="Single Dose">Single Dose</option>
                                                <option value="Fully Vaccinated">Fully Vaccinated</option>
                                                <option value="Unvaccinated ">Unvaccinated</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 border">
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputNoofHousehold" id="labelHousehold"
                                                class="household_info">No. of Household in this
                                                Address</label>
                                        </div>
                                        <div class="col-lg-3">
                                            <select name="Household" class="form-control household_info"
                                                id="inputNoofHousehold">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputNoofFamilies" id="labelFamilies" class="household_info">No.
                                                of Families living in the
                                                Household</label>
                                        </div>
                                        <div class="col-lg-3">
                                            <select name="Families" class="form-control household_info"
                                                id="inputNoofFamilies">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for=" NoofFamilyMembers" id="labelMembers" class="household_info">No.
                                                of Family members including the
                                                head of the family</br></label>
                                        </div>
                                        <div class="col-lg-3">
                                            <select name="FamilyMembers" class="form-control household_info"
                                                id="inputNoofFamilyMembers">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputRelationship" id="labelRelationship">Relationship
                                                to Head</label>
                                        </div>
                                        <div class="col-lg-3">
                                            <input name="relationship" id="inputRelationship" class="cap"
                                                style="width: 100%;">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputYearsofStay" id="labelYearsofStay">Years of
                                                stay in Makati City</label>
                                        </div>
                                        <div class="col-lg-3">
                                            <select name="YearsofStay" class="form-control" id="inputYearsofStay">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputYearsinBrgy" id="labelYearsinBrgy">Years of
                                                stay in Brgy. Cembo</label>
                                        </div>
                                        <div class="col-lg-3">
                                            <select name="YearsinBrgy" class="form-control" id="inputYearsinBrgy">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label for="inputYearsinCurrent" id="labelYearsinCurrent">Years
                                                of stay in Current Address</label>
                                        </div>
                                        <div class="col-lg-3">
                                            <select name="YearsinCurrent" class="form-control" id="inputYearsinCurrent">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-5 border">
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-check-label" for="yellow" id="labelYellowCard">Yellow
                                                Card</label>
                                        </div>
                                        <div class="col">
                                            <input type="checkbox" name="yellow" id="yellow"
                                                class="form-check-input card" value="0">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-check-label" for="blue" id="labelBlueCard">Blue
                                                Card</label>
                                        </div>
                                        <div class="col">
                                            <input type="checkbox" name="blue" id="blue" class="form-check-input card"
                                                value="0">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-check-label" for="white" id="labelWhiteCard">White
                                                Card</label>
                                        </div>
                                        <div class="col">
                                            <input type="checkbox" name="white" id="white" class="form-check-input card"
                                                value="0">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-check-label" for="makatizen"
                                                id="labelMakatizenCard">Makatizen Card</label>
                                        </div>
                                        <div class="col">
                                            <input type="checkbox" name="makatizen" id="makatizen"
                                                class="form-check-input card" value="0">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <label class="form-check-label" for="philhealth"
                                                id="labelPhilhealth">Philhealth</label>
                                        </div>
                                        <div class="col">
                                            <input type="checkbox" name="philhealth" id="philhealth"
                                                class="form-check-input card" value="0">
                                        </div>
                                    </div>
                                    <div class="row border">
                                        <div class="col-lg-6 col-sm-2">
                                            <label for="inputEducational" id="labelEducational">Educational
                                                Attainment</label>
                                        </div>
                                        <div class="col-lg-6 col-sm-2">
                                            <select name="educ" id="educ" class="form-control">
                                                <option>Elementary</option>
                                                <option>High School</option>
                                                <option>College</option>
                                                <option>Master's / Doctorate Degree</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row border">
                                        <div class="col-lg-6 col-sm-2">
                                            <label for="inputMonthly" id="labelMonthly">Monthly Household
                                                Income</label>
                                        </div>
                                        <div class="col-lg-6 col-sm-2">
                                            <input type="number" id="inputMonthly" name="inputMonthly"
                                                style="width: 100%;">
                                        </div>
                                    </div>
                                    <div class="row border">
                                        <div class="col-lg-6 col-sm-2">
                                            <label for="inputExpenses" id="labelExpenses">Monthly Household
                                                Expenses</label>
                                        </div>
                                        <div class="col-lg-6 col-sm-2">
                                            <input type="number" id="inputExpenses" name="inputExpenses"
                                                style="width: 100%;">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--* HIDDEN-->
                            <input type="hidden" name="id" id="id" />
                            <input type="hidden" name="age" id="age" class="form-control" />
                            <input type="hidden" name="mean_income" id="mean_income" class="form-control" />
                            <input id="inputNetIncome" name="inputNetIncome" class="d-none">
                            <input type="hidden" name="action" id="action" />

                            <!--* SUBMIT FUNCTION -->
                            <div class="btn-submit">
                                <button type="submit" class="btn btn-primary" id="action_button">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>
<!--*AJAX-->
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<!-- Optional JavaScript -->
<script src="javascripts/registration.js"></script>
<!-- Registration Back-end Format -->
<script src="javascripts/registerformat.js"></script>
<script>

    //  AJAX QUERY
    $('#register_form').on('submit', (e) => {
        e.preventDefault()
        GenerateID()
        Capitalize()

        $('#action').val('Add')
        $.ajax({
            url: `${window.location.origin}/register/action`,
            method: "POST",
            data: $('#register_form').serialize(),
            dataType: "JSON",
            success: function (data) {
                $('#register_form')[0].reset()
                $('#message').html(`<div class="alert alert-success mt-5">${data.message}<br>Your Brgy. ID is: <b>${$('#id').val()}</b></div>`)
            }
        })
    })
</script>